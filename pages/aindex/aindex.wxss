/* pages/aindex/aindex.wxss */

video {
  width: 100%;
 
  background: transparent;
  height: 100%;
}

image {
  width: 100%;
  height: 100%;
  /* padding-bottom: 100rpx; *//* background: green; */
}

.page {
  position: absolute;
  bottom: 0;
  top: 0;
  left: 0;
  right: 0;
  background: gray;
}

.content {
  padding: 15rpx;
  font-size: 50rpx;
  text-decoration: 2em;
  background: gray;
}

.buy {
  position: fixed;
  bottom: 170rpx;
  right: 5rpx;
  /* width: 100%; */
  z-index: 2;
  height: 60rpx;
  font-size: 40rpx;
  text-align: center;
  line-height: 60rpx;
  padding: 0 10rpx;
  border: 1px gray solid;
  background-color: rgba(255, 255, 255, 0.3);
}

.share {
  position: fixed;
  bottom: 250rpx;
  right: 5rpx;
  /* width: 100%; */
  z-index: 2;
  height: 60rpx;
  font-size: 40rpx;
  text-align: center;
  line-height: 60rpx;
  padding: 0 10rpx;
  border: 1px gray solid;
  background-color: rgba(255, 255, 255, 0.3);
}

.image_layout {
  display: flex;
  flex-direction: column;
  justify-content: center;
  position: absolute;
  top: 0;
  bottom: 0rpx;
  width: 100%;
  /* background-color: red; */
  justify-items: center;
}

.image_wrap {
  width: 100%;
  height: 100%;
}

.head-img {
  width: 100rpx;
  height: 100rpx;
  position: fixed;
  bottom: 350rpx;
  right: 5rpx;
  /* width: 100%; */
  z-index: 2;
  border-radius: 50%;
}

.pgdown {
  width: 53rpx;
  height: 75rpx;
  position: fixed;
  bottom: 100rpx;
  left: 5rpx;
  /* width: 100%; */
  z-index: 2;
}
